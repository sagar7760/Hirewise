# Environment Variables
NODE_ENV=development
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/hirewise
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/hirewise

# JWT Secret
JWT_SECRET=your_super_secret_jwt_key_here_make_it_complex
JWT_EXPIRES_IN=7d

# Gemini AI
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash
# Common options: gemini-1.5-flash-latest, gemini-1.5-pro-latest, gemini-1.5-flash-8b

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Email (for notifications)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# CORS
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX=20
RATE_LIMIT_MUTATION_MAX=100
# RATE_LIMIT_MAX_REQUESTS applies to general (mostly GET) traffic.
# RATE_LIMIT_AUTH_MAX applies to /api/auth endpoints (login/register/reset etc.).
# RATE_LIMIT_MUTATION_MAX applies to write-heavy role routes (/api/applications,/api/hr,/api/admin,/api/interviewer,/api/profile).